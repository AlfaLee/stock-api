{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "target": "es5",
    "outDir": "dist",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "types/*": [
        "../types/*"
      ],
      "@stocks/*": [
        "stocks/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@interfaces/*": [
        "interfaces/*"
      ]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/**",
    "dist/**"
  ]
}
